<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authorize_title"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/go_to_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authorize"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/set_scope"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <Button
        android:id="@+id/set_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配置权限"
        app:layout_constraintTop_toTopOf="@id/go_to_auth"
        app:layout_constraintBottom_toBottomOf="@id/go_to_auth"
        app:layout_constraintLeft_toRightOf="@id/go_to_auth"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/go_to_auth_just_through_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authorize_web"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_auth"/>

    <Button
        android:id="@+id/go_to_system_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_system_photo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_auth_just_through_web"/>

    <Button
        android:id="@+id/share_to_douyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_to_aweme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_system_picture"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/set_default_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_default_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_app"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/media_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_path"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_default_hashtag"
        android:visibility="gone"/>

    <Button
        android:id="@+id/add_photo_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_photo_video"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_text"
        android:visibility="gone"/>

    <Button
        android:id="@+id/clear_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_text"
        android:visibility="gone"/>

    <RadioGroup
        app:layout_constraintTop_toBottomOf="@id/share_to_douyin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/target_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/app_tiktok-m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TikTok-M"/>

        <RadioButton
            android:id="@+id/app_tiktok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiktok"/>

        <RadioButton
            android:id="@+id/app_aweme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抖音"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>