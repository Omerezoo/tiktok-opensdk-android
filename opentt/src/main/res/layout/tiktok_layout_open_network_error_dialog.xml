<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="22dp">

    <TextView
        android:id="@+id/tiktok_open_auth_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/tiktok_open_network_error_title"
        android:textColor="#222222"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tiktok_open_auth_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        android:text="@string/tiktok_open_network_error_tips"
        android:textColor="#999999"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tiktok_open_auth_tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/tiktok_open_network_error_confirm"
            android:textColor="#2a90d7"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>